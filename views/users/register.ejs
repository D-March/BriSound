<% layout('layouts/boilerplate')%>

<h1>Register</h1>
<form action="/register" method="POST" class='validated-form' novalidate>
    <div class="col mb-3">
        <label class='form-label' for="username">Username</label>
        <input type="text" class="form-control" aria-label="username" id='username' name='username' required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="col mb-3">
        <label class='form-label' for="email">Email</label>
        <input type="email" class="form-control" aria-label="email" id='email' name='email' required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="col mb-3">
        <label class='form-label' for="password">Password</label>
        <input type="password" class="form-control" aria-label="password" id='password' name='password' required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <button class='btn btn-success'>Register</button>
</form>