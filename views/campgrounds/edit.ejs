<%- include("../partials/header") %>

<div class='container'>
	<div class='row'>

			<h1>
				Edit <%= campground.name %>
			</h1>
		<div class='new'>

			<form action='/campgrounds/<%= campground._id %>/?_method=PUT' method='POST'>
				<div class='form-group'>
					<input class='form-control' type='text' name='campground[name]' value='<%= campground.name %>'>
				</div>
				
				<div class='form-group'>
					<input class='form-control' type='number' name='campground[price]' placeholder='price' min='0.01' step='0.01'>
				</div>

				<div class='form-group'>
					<input class='form-control' type='text' name='campground[image]' value='<%= campground.image %>'>
				</div>
				
				<div class='form-group'>
					<textarea class='form-control' type='text' name='campground[description]' value='<%= campground.description %>' rows='12'><%= campground.description %></textarea>
					<!-- <input class='form-control' type='text' name='description' value=''> -->	
				</div>
				
				<button class='btn btn-lg btn-default btn-block btn-primary'>
					Submit
				</button>
			</form>

				<a class='goback' href='/campgrounds'>Go Back</a>
			
		</div>
	</div>
</div>

<%- include("../partials/footer") %>